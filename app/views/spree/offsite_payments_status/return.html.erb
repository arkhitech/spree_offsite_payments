<script type="text/javascript">
   $( document ).ready(function() {      
      
      <%case @result%>
      <%when :payment_processed_already %>
        window.webkit.messageHandlers.howmuchApi.postMessage({'event': 'onPaymentSuccess', 'message': '<%=flash[:notice]%>'});
        console.log("onPaymentSuccess");
      <%when :order_completed%>
        window.webkit.messageHandlers.howmuchApi.postMessage({'event': 'onPaymentSuccess', 'message': '<%=flash[:notice]%>'});
        console.log("onPaymentSuccess");
      <%when :payment_success_but_order_incomplete%>
        window.webkit.messageHandlers.howmuchApi.postMessage({'event': 'onPaymentFailure', 'message': '<%=flash[:warn]%>'});
        console.log("onPaymentSuccess");
      <%when :payment_failure%>
        window.webkit.messageHandlers.howmuchApi.postMessage({'event': 'onPaymentFailure', 'message': '<%=flash[:error]%>'});
        console.log("onPaymentSuccess");
      <%else%>
        window.webkit.messageHandlers.howmuchApi.postMessage({'event': 'onPaymentSuccess', 'message': 'PaymentSuccess'});
        console.log("onPaymentSuccess");
      <%end%>    
      
      });
</script>

